---
import '../assets/style.css'
import '@fontsource-variable/montserrat'
import SiteHeader from '../components/SiteHeader.vue'
import logo from '../assets/fragdenstaat.svg'
import GradientBackground from '../components/GradientBackground.vue'

interface Props {
  isApp?: boolean
}
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <title>Real-O-Mat</title>
  </head>
  <body class="bg-purple-50">
    <GradientBackground class="flex flex-col flex-1 pb-12" client:load />

    <div class="min-h-screen pb-12">
      <SiteHeader isApp={!!Astro.props.isApp} client:load />
      <div class="container mx-auto px-4 z-10">
        <main>
          <slot />
        </main>
      </div>
    </div>

    <footer>
      <div class="bg-gray-50">
        <div
          class="container mx-auto py-12 px-4 text-gray-600 flex max-md:flex-col items-center"
        >
          <div>
            <a href="https://fragdenstaat.de" target="_blank">
              <img src={logo.src} alt="Ein Projekt von FragDenStaat" />
            </a>
          </div>
          <ul class="flex space-x-6 max-md:mt-6 md:space-x-12 md:ms-auto">
            <li>
              <a href="methodik"> Methodik </a>
            </li>
            <li>
              <a href="https://fragdenstaat.de/impressum" target="_blank">
                Impressum
              </a>
            </li>
            <li>
              <a href="https://fragdenstaat.de/datenschutz" target="_blank">
                Datenschutz
              </a>
            </li>
          </ul>
        </div>
      </div>
    </footer>
  </body>
</html>
